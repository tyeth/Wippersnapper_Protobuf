#!/usr/bin/env bash

# move to the directory above this file
cd "${0%/*}/.."

# ensure output dir is present
rm -rf js_out
mkdir js_out

# activate mise and make sure tools are present
eval "$(mise activate bash)"

if ! which protoc &> /dev/null; then
  echo "Could not find protoc on the path! Did you run 'mise install'?"
  exit 1
fi

if ! which protoc-gen-js &> /dev/null; then
  echo "Could not find protoc-gen-js on the path! Did you run 'mise install'?"
  exit 1
fi


# invoke protoc with nanopb and wippersnapper proto files, the js plugin, and output location
protoc --plugin=`which protoc-gen-js` --proto_path=./proto ./proto/nanopb/nanopb.proto ./proto/wippersnapper/*/*/*.proto --js_out=import_style=commonjs,binary:js_out
